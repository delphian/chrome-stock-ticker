{
  "manifest_version": 2,

  "name": "Chrome Stock Ticker",
  "description": "Chrome extension scans current page for any ticker symbols and if found will display associated stock information in ticker bar.",
  "version": "0.9.0",

  "homepage_url": "https://github.com/delphian/chrome-stock-ticker/wiki",

  "permissions": [
    "https://www.google.com/",
    "http://finance.yahoo.com/",
    "notifications",
    "storage",
    "tabs"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "web_accessible_resources": [
    "libs/external/bootstrap/bootstrap-3.0.3/dist/js/bootstrap.min.js",
    "libs/cst-bootstrap.css",
    "libs/external/jquery/jquery.min.js"
  ],
  
  "options_page": "options/options.html",

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Chrome Stock Ticker",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at" : "document_idle",
      "js": [
        "libs/external/jquery/jquery.min.js",
        "libs/external/bootstrap/bootstrap-3.0.3/dist/js/bootstrap.min.js",
        "libs/CSTResource.js",
        "libs/CSTSymbols.js",
        "libs/CSTTicker.js",
        "content/find-symbols.js"
      ],
      "css": [
        "libs/cst-bootstrap.css",
        "content/find-symbols.css"
      ]
    }
  ],

  "icons": { 
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "38": "images/icon-38.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "background": {
    "page": "background/background.html"
  }

}
