{
  "manifest_version": 2,

  "name": "Stock Ticker for Chrome",
  "description": "Scans current page for any ticker symbols and if found will display associated stock information in ticker bar.",
  "version": "0.9.1",
  "author": "Bryan Hazelbaker",
  "homepage_url": "http:www.chromestockticker.com",

  "permissions": [
    "https://www.google.com/",
    "http://finance.yahoo.com/",
    "notifications",
    "storage",
    "tabs"
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "web_accessible_resources": [
    "libs/external/bootstrap/bootstrap-3.0.3/dist/js/bootstrap.min.js",
    "libs/cst-bootstrap.css",
    "libs/external/jquery/jquery.min.js",
    "libs/external/angular/angular.min.js",
    "js/templates/variable.template.html",
    "js/templates/metric.template.html",
    "js/templates/bar.template.html"
  ],
  
  "options_page": "options/options.html",

  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Stock Ticker for Chrome",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "run_at" : "document_idle",
      "js": [
        "libs/external/jquery/jquery.min.js",
        "libs/external/angular/angular.min.js",
        "libs/external/bootstrap/bootstrap-3.0.3/dist/js/bootstrap.min.js",
        "libs/CSTResource.js",
        "libs/CSTSymbols.js",
        "libs/CSTTicker.js",
        "js/cstApp.js",
        "js/cstFactoryResource.js",
        "js/cstMetricCtrl.js",
        "js/cstVariableCtrl.js",
        "js/cstBarCtrl.js",
        "content/find-symbols.js"
      ],
      "css": [
        "libs/cst-bootstrap.css",
        "css/cstApp.css"
      ]
    }
  ],

  "icons": { 
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "38": "images/icon-38.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "background": {
    "page": "background/background.html"
  }

}
